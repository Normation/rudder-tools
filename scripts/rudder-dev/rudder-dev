TRACKER_NAME_MAPPING = { 'Bug': 'bug', 'User story': 'ust', 'Architecture': 'arch', 'Change': 'chg', 'Problem': 'PBM', 'Incident': 'INC' }
PENDING_TR_CODE = 3
IN_PROGRESS_CODE = 9
CUSTOM_FIELD_PR = 3
ALT_CUSTOM_FIELD_PR = 1


